# ==========================================
# ASCII Art Generator Environment Variables
# ==========================================

# HuggingFace Token
# Required for using FLUX.1 Schnell via HF Inference API
# Get one here: https://huggingface.co/settings/tokens
HF_TOKEN=

# Gemini API Key
# Used for the primary LLM Prompt Rewriter (Google Gemini)
# Get one here: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=
# or use GOOGLE_API_KEY as an alias
# GOOGLE_API_KEY=

# Groq API Key
# Used as a fast fallback for Prompt Rewriting
# Get one here: https://console.groq.com/keys
GROQ_API_KEY=

# ==========================================
# Web Server Configuration
# ==========================================

# Port to run the Gradio app on (default: 7860)
GRADIO_SERVER_PORT=7860

# Server name (default: 127.0.0.1). Use 0.0.0.0 for network access.
GRADIO_SERVER_NAME=127.0.0.1

# Enable public sharing link (True/False)
GRADIO_SHARE=False

# Analytics and monitoring
GRADIO_ANALYTICS_ENABLED=False
